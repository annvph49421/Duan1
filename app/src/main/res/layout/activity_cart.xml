<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GioHang.CartActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/btnBack_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cart"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textSize="24dp"
            android:textColor="@color/black"
            />

    </LinearLayout>


    <!-- Hiển thị icon thêm địa chỉ nếu chưa có -->
    <ListView
        android:id="@+id/cartListView"
        android:layout_width="match_parent"
        android:layout_height="388dp"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/btnAddAddress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_cong"
        android:layout_marginLeft="24dp"
        android:visibility="visible" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/addressTextView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="Thêm địa chỉ nhận hàng"
        android:visibility="visible"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <ImageView
        android:id="@+id/btnsua"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/img_12"/>

</LinearLayout>
    <!-- Hiển thị thông tin địa chỉ nếu đã thêm -->


    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"

        android:text="Tổng cộng: 0đ"
        android:textSize="28sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/btndathang"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="Đặt Hàng"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/khungbtnadd"
        />

</LinearLayout>