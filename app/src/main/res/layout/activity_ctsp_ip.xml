    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền:"
            android:textColor="#0B0A0A"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/tvTongTien_ip"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="#FA0000"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnTru_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_tru"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/khungdau"
            android:padding="1dp"
            />

        <TextView
            android:id="@+id/tvSoluong_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:text=""
            android:textStyle="bold"
            android:textSize="20dp"
            />

        <ImageView
            android:id="@+id/btnCong_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="17dp"
            android:background="@drawable/khungdau"
            android:padding="1dp"
            android:src="@drawable/ic_cong" />

    </LinearLayout>

    <Button
        android:id="@+id/btnAdd_ip"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:text="ADD TO CART"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:background="@drawable/khungbtnadd"
        />




</LinearLayout>